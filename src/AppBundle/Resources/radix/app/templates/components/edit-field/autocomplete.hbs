{{ember-selectize
    content=_options
    selection=_selection
    optionValuePath='id'
    optionLabelPath=displayField
    sortField=displayField
    add-item="addItem"
    remove-item="removeItem"
    select-item="selectItem"
    update-filter="updateFilter"
    on-blur="onBlur"
    multiple=multiple
    loading=_loading
    highlight=false
    disabled=disabled
    placeholder=placeholder
    hideSelected=true
}}
